doctype html
html(lang='ru', ng-app='app', ng-controller='AppController')
    head
        meta(charset='UTF-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title(ng-bind='pageTitle')= htmlWebpackPlugin.options.title
        - each cssFile in htmlWebpackPlugin.options.files.css
            link(rel="stylesheet", type="text/css", href="#{cssFile}")
    body
        div(ui-view='nav')
        div(ui-view='content')
        div(ui-view='footer')
        - each jsFile in htmlWebpackPlugin.options.files.js
            script(src="#{jsFile}")